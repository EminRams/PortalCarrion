@model PortalCarrion.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Usuario</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="row">

                <div class="form-group col-md-6">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Active" class="control-label">Estado</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value=true asp-for="Active" />
                        <label class="form-check-label" for="statusActivo">Activo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value=false asp-for="Active" />
                        <label class="form-check-label" for="statusInactivo">Inactivo</label>
                    </div>
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pt-5">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
                <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
