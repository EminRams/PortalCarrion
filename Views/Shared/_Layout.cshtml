<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
        content="Portal Carrion es una plataforma de uso exlusivo para empleados de Grupo Carrion.">
    <title>@ViewData["Title"] - PortalCarrion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortalCarrion.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white box-shadow mb-5 p-0">
            <div class="container-fluid p-0">
                <a class="navbar-brand text-danger mh-100 m-0 p-0" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/images/logos/carrion_logo.webp")" alt="Carrion"
                        style="max-width: 200px; max-height: 100%;">
                </a> <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3 ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Voucher" asp-action="Index">Mis
                                Recibos de Pago</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserConfig" asp-action="Edit">
                                Configuración de Usuario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin"
                                asp-action="AdminLogin">Administrador</a>
                        </li>
                    </ul>
                    <form action="/Auth/Logout" method="post" class="form-inline text-muted mx-lg-5">
                        <button type="submit" class="btn btn-link nav-link">Cerrar Sesion
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer
        class="border-top text-white text-center d-flex flex-column flex-lg-row align-items-center justify-content-evenly gap-5 py-4"
        style="background-color: #e42c28;">
        <div>
            Desarrollado por: <a href="https://www.linkedin.com/in/emin-ramos-ramirez-8b8a22287" class="text-white">Ing.
                Emin Ramos (IT Carrion)</a>
        </div>
        <div class="text-break">
            &copy; Copyright 2024 Tiendas Carrion. Todos los derechos reservados
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
