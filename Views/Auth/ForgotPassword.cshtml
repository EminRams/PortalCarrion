@model PortalCarrion.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar contraseña";

    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="height: 95vh;">
    <form asp-action="ForgotPassword" method="post"
        class="p-5 rounded shadow-lg d-flex flex-column justify-content-center align-items-center gap-5">
        <h2 class="text-center">Restablecer Contraseña</h2>
        <p for="email" class="text-muted text-center">Ingrese el correo electrónico asociado a su cuenta</label>
        <div class="form-group mb-3 w-100">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" id="email" name="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger w-100">Enviar Enlace</button>
    </form>
</div>